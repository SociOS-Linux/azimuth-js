{
  "name": "urbit-constitution-js",
  "version": "0.7.1",
  "description": "Functions for interacting with Azimuth",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urbit/constitution-js.git"
  },
  "main": "index.js",
  "scripts": {
    "test:deploy": "cd node_modules/urbit-azimuth && truffle compile && truffle deploy",
    "test:ganache": "ganache-cli -m 'benefit crew supreme gesture quantum web media hazard theory mercy wing kitten' > /dev/null &",
    "test:setup": "npm run test:ganache && npm run test:deploy",
    "test:mocha": "nyc mocha --reporter spec",
    "test:cleanup": "pkill -f ganache-cli",
    "test": "npm-run-all test:setup test:mocha test:cleanup --continue-on-error"
  },
  "keywords": [
    "urbit",
    "constitution",
    "smart",
    "contract"
  ],
  "devDependencies": {
    "bip39": "^2.5.0",
    "chai": "^4.2.0",
    "ganache-cli": "^6.2.3",
    "hdkey": "^1.1.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "secp256k1": "^3.5.2",
    "truffle": "^4.1.14"
  },
  "dependencies": {
    "urbit-azimuth": "0.9.1",
    "ethereumjs-util": "^5.2.0",
    "web3": "^1.0.0-beta.36"
  },
  "author": "Tlon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/urbit/constitution-js/issues"
  },
  "homepage": "https://github.com/urbit/constitution-js",
  "directories": {
    "test": "test"
  }
}
